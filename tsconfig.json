{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ES2019",
      "dom",
      "dom.iterable",
      "esnext",
      "ScriptHost"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "downlevelIteration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/definitely/@types"
    ]
  },
  "include": [
    "src"
  ]
}
